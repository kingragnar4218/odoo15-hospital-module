<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cancel_appoinment_form" model="ir.ui.view">
        <field name="name">cancel.appoinment.wizard.form</field>
        <field name="model">cancel.appoinment.wizard</field>
        <field name="arch" type="xml">
            <form string="Cancel Appoinment">
                <group>
                    <field name="appoinment_id"/>
                </group>
                <footer>
                    <button name="action_cancel"
                            type="object"
                            string="Cancel Appoinment"
                            class="btn-primary"/>
                    <button string="Discard"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_cancel_appoinment" model="ir.actions.act_window">
    <field name="name">Cancel Appoinment</field>
    <field name="res_model">cancel.appoinment.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

</odoo>
