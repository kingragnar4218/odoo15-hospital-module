<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    form view section  start-->
    <record id="view_cancel_appoinment_form" model="ir.ui.view">
        <field name="name">cancel.appoinment.wizard.form</field>
        <field name="model">cancel.appoinment.wizard</field>
        <field name="arch" type="xml">
            <form string="Cancel Appoinment">
                <group>
                    <group>
                        <field name="appoinment_id" invisible="context.get('hide_appoinment')"
                        domain="[('state','=','draft')]"/>
                        <field name="reason"/>
                    </group>
                    <group>
                        <field name="date_cancel"/>
                    </group>
                </group>

                <footer>
                    <button name="action_cancel"
                            type="object"
                            string="Cancel Appoinment"
                            class="btn-primary"/>
                    <button string="Discard"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    <!--    form view section finish -->


    <!-- Window Action start-->
    <record id="action_cancel_appoinment" model="ir.actions.act_window">
        <field name="name">Cancel Appoinment</field>
        <field name="res_model">cancel.appoinment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <!-- Window Action finish-->

</odoo>
