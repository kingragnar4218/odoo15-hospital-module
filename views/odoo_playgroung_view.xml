<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--        form section start -->
    <record id="view_odoo_playground_form" model="ir.ui.view">
        <field name="name">odoo.playground.form</field>
        <field name="model">odoo.playground</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="model_id"/>
                    <field name="code" widget="ace"
                           options="{'mode': 'python'}"/>
                </group>

                <group>
                    <button name="action_execute"
                            string="Execute"
                            type="object"
                            class="btn-primary"
                            data-hotkey="q"/>
                </group>

                <group>
                    <field name="result"/>
                </group>

                <footer>
                </footer>
            </form>
        </field>
    </record>
    <!--        form section finish -->


    <!-- Window Action start-->
    <record id="action_playground" model="ir.actions.act_window">
        <field name="name">Play Ground</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">odoo.playground</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>
    <!-- Window Action finish-->

    <!--    main menu technical start-->
    <menuitem   id="menu_technical" name="Technical" parent="menu_hospital_root" sequence="110">
                <menuitem   id="menu_playground" name="play ground" action="action_playground" sequence="10"/>
    </menuitem> <!--- this manu show in hospital module -->
    <!--    main menu technical finish-->

