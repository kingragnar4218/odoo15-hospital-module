<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    this is tree view it show all data start -->
    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree export_xlsx="0">
                <field name="name"/>
                <field name="age" avg="average age"/>
                <field name="ref"/>
                <field name="appointment_count" sum="total appoinment "/>
                <!--                <field name="ref"/>-->
                <field name="gender"/>
                <!-- color tag  -->
                <field name="tag_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>
    <!--    this is tree view it show all data finish -->

    <!--    form view section  start-->
    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="model">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form sample="1">
                <sheet>

                    <!--star button section start -->
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" string="Appointment" name="action_view_appointments" icon="fa-star">
                            <field string="Appointment" name="appointment_count" widget="statinfo"/>
                        </button>
                    </div>
                    <!--star button section finish -->


                    <div class="alert alert-info text-center o_form_header" role="alert"
                         attrs="{'invisible' : [('is_birthday' , '=' , False)]}">
                        <a class="close" data-dismiss="alert" href="#">Ã—</a>
                        <div class="o_statusbar_alert">
                            <strong>Today is Birthday!</strong>
                        </div>
                        <div>
                            <field name="name" readonly="1"/>
                        </div>
                    </div>


                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h4>
                            <field name="ref" readonly="1"/>
                        </h4>
                        <h2>
                            <label for="name" string="Name" class="oe_edit_only"/>
                            <field name="name"/>
                        </h2>

                    </div>
                    <group>
                        <group>
                            <!--                            <field name="name"/>-->
                            <field name="date_of_birth"/>
                            <field name="age"/>
                            <field name="appoinment_id"/>
                            <field name="appointment_count"/>
                            <field name="is_birthday"/>
                        </group>
                        <group>
                            <!--                            <field name="ref"/>-->

                            <!--                            <field name="ref"/>-->
                            <field name="gender" invisible="context.get('hide_gender')"/>
                            <!--                            here you can use this widget widget="radio"-->

                            <!--                             here oi change widget   many2many_checkboxes   -->
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field' : 'color' }"/>

                            <field name="active" invisible="1"/>

                        </group>
                    </group>
                    <group string="Other Information " name="other_info">
                        <group>
                            <field name="parent"/>
                            <field name="marital_status" attrs="{'readonly': [('id', '!=', False)]}"/>
                            <field name="partner_name" attrs="{'invisible': [('marital_status', '!=', 'married')],
                                                            'readonly': [('id', '!=', False)],
                                                            'required' : [('marital_status', '=', 'married')]}"/>
                        </group>
                        <group>
                            <field name="phone" widget="phone" />
                            <field name="email" widget="email" />
                            <field name="website" widget="url" />
                        </group>
                    </group>

                </sheet>

                <!--                chatter section -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <!--    form view section finish -->

    <!--  search section start   -->
    <record id="view_hospital_patient_search" model="ir.ui.view">
        <field name="model">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="['|',('name' , 'ilike' , self ) ,('ref' , 'ilike' , self ) ]"/>
                <field name="ref"/>
                <field name="age"/>
                <field name="gender"/>
                <filter name="filter_male" string="male" domain="[('gender' , '=' , 'male')]"/>
                <filter name="filter_female" string="female" domain="[('gender' , '=' , 'female')]"/>
                <separator/>
                <!--                <filter name="kids" string="kids" domain="[('age' , '&lt;' , 5)]"/>-->
                <filter name="archive" string="archive" domain="[('active' , '=' , False)]"/>
                <group>
                    <filter string="gender" name="group_by_gender" context="{'group_by' : 'gender'}"/>
                </group>
                <searchpanel>
                    <!--                    this search panel is you show your left side of module  -->
                    <field name="gender" icon="fa-users" select="multi" enable_counters="1"/>
                </searchpanel>

            </search>
        </field>
    </record>
    <!--  search section finish  -->

    <!-- Window Action -->
    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_male' : 1 , 'search_default_group_by_gender' : 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first patient
            </p>
        </field>
    </record>

</odoo>
